#include<stdio.h>
int main()
{
    int n,i,j,k=0,l;
    scanf("%d",&n);
    k=n;
    l=n+2;
    for(i=0;i<(2*n)+1;i++)
    {
        if(i<=n)
        {
            
            for(j=0;j<=i;j++)
            {
                printf("%d",k);
            }
            k++;
            
        }
        else
        {
            
            
            for(j=0;j<((2*n)+1)-i;j++)
            {
                printf("%d",l);
            
                
            }
            l--;
            
            
        }
        
        printf("\n");
    }
    
}
