#include<stdio.h>
int main()
{
    int n,i;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(int s=0;s<=n-i;s++)
        {
            printf(" ");
        }
        for(int j=0;j<(2*i)+1;j++)
        {
            printf("*");
        }
        for(int k=n+i;k<=(2*n)-1;k++)
        {
            printf(" ");
        }
        printf("\n");
    }
}
