//Find the 15th term of the series?

//0,0,7,6,14,12,21,18, 28

#include<stdio.h>
int six(int n)
{
    int i,l;
    for(int i=0;i<n;i++)
    {
        l=6*i;
    }
    printf("%d",l);
}
int seven(int n)
{
    int i,l;
    for(int i=0;i<n;i++)
    {
        l=7*i;
    }
    printf("%d",l);
}
int main()
{
    int n;
    scanf("%d",&n);
    if(n%2==0)
    {
        six(n/2);
    }
    else
    {
        seven((n+1)/2);
    }
}
