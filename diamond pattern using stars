#include<stdio.h>
int main()
{
    int n,i,j,s;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(s=0;s<n-i+1;s++)
        {
            printf(" ");
        }
        for(j=0;j<=i;j++)
        {
            printf(" * ");
        }
        for(s=0;s<n-i+1;s++)
        {
            printf(" ");
        }
        printf("\n");
    }
    for(i=0;i<n;i++)
    {
        for(s=0;s<=i+2;s++)
        {
            printf(" ");
        }
        for(j=0;j<n-i-1;j++)
        {
            printf(" * ");
        }
        for(s=0;s<=i+2;s++)
        {
            printf(" ");
        }
        printf("\n");
    }
}
