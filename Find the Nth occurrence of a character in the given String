#include<stdio.h>
#include<string.h>

int main()
{
    char s[100];
    scanf("%s\n",s);
    char c;
    
    scanf("%c",&c);
    int l=strlen(s),i,n,p=0;
    scanf("%d",&n);
    for(i=0;i<l;i++)
    {
        if(s[i]==c)
        {
            ++p;
            
        }
        if(p==n)
        {
            printf("%d",i);
            break;
        }
    }
    if(p==0)
    {
        printf("-1");
    }
   
    
}
